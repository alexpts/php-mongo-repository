{
    "name": "alexpts/php-mongo-repository",
    "license": "MIT",
    "description": "Repository for MongoDb",
    "type": "library",
    "authors": [
        {
            "name": "alexpts",
            "email": "alexpts@yandex.ru"
        }
    ],
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~8.0",
        "ext-mongodb": ">=1.9.1",
        "mongodb/mongodb": "^1.8",
        "alexpts/php-data-transformer2": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "PTS\\MongoRepo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\PTS\\MongoRepo\\": "test"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
